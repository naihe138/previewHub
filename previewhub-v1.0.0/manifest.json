{
  "manifest_version": 3,
  "name": "PreviewHub (GitHub图片预览)",
  "version": "1.1.0",
  "description": "在GitHub页面直接预览所有.md文件中的图片，支持弹窗浏览和导航，兼容github.dev编辑器",
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://*.github.dev/*",
    "https://raw.githubusercontent.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/*",
        "https://*.github.dev/*/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PreviewHub - GitHub图片预览"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
